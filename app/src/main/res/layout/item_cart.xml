<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imgBtnMinus2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnAdd2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tvNameCart"
        app:layout_constraintTop_toBottomOf="@+id/tvNameCart"
        app:srcCompat="@drawable/ant_design_minus_circle_outlined" />

    <ImageButton
        android:id="@+id/imgBtnAdd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtnMinus2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgBtnMinus2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/group_7" />

    <ImageView
        android:id="@+id/imgCart"
        android:layout_width="155dp"
        android:layout_height="174dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/images_2" />

    <TextView
        android:id="@+id/tvNameCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Matteo Armchair"
        android:textColor="#020101"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgCart"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvQuanCart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal|center_vertical"
        android:text="1"
        android:textColor="#020101"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgBtnMinus2"
        app:layout_constraintEnd_toStartOf="@+id/imgBtnAdd2"
        app:layout_constraintStart_toEndOf="@+id/imgBtnMinus2"
        app:layout_constraintTop_toTopOf="@+id/imgBtnMinus2" />

    <TextView
        android:id="@+id/tvPriceCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$550"
        android:textColor="#020101"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvNameCart"
        app:layout_constraintTop_toBottomOf="@+id/imgBtnMinus2" />
</androidx.constraintlayout.widget.ConstraintLayout>